{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "SlashCommand(/commit-manual)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/micro-commit.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash(mv .*)|Bash(cp .*)|Bash(mkdir .*)|Bash(sed -i.*)|Bash(.*>.*)|Bash(npm (install|add|remove|update).*)|Bash(yarn (add|remove).*)|Bash(pnpm (add|remove).*)|Bash(npx create.*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/micro-commit.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
