{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "SlashCommand(/commit-manual)",
      "Bash(uv run pytest:*)",
      "WebFetch(domain:docs.firecrawl.dev)",
      "Bash(tree:*)",
      "Bash(xargs:*)",
      "Bash(echo:*)",
      "Bash(uv run python:*)",
      "Bash(git log:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/micro-commit.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash(mv .*)|Bash(cp .*)|Bash(mkdir .*)|Bash(sed -i.*)|Bash(.*>.*)|Bash(npm (install|add|remove|update).*)|Bash(yarn (add|remove).*)|Bash(pnpm (add|remove).*)|Bash(npx create.*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/micro-commit.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}