{
  "permissions": {
    "allow": [
      "Bash(git add.*)",
      "Bash(git commit.*)",
      "Bash(uv run ruff:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(pytest:*)",
      "Bash(uv run pytest:*)",
      "WebFetch(domain:docs.pytest.org)",
      "WebFetch(domain:docs.pytest.org)",
      "WebFetch(domain:docs.pytest.org)",
      "Bash(.claude/hooks/macro-commit.sh:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/micro-commit.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash(mv .*)|Bash(cp .*)|Bash(mkdir .*)|Bash(sed -i.*)|Bash(.*>.*)|Bash(npm (install|add|remove|update).*)|Bash(yarn (add|remove).*)|Bash(pnpm (add|remove).*)|Bash(npx create.*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/micro-commit.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}